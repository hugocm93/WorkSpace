package Interface;

import java.awt.HeadlessException;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.*;
import javax.swing.*;


public class Tabuleiro extends JFrame{
	
	private BufferedImage img;
	PainelMapa m1 = new PainelMapa();
	
	public Tabuleiro(String title) throws HeadlessException {
		super(title);
		
		this.add(m1);
		m1.setVisible(true);
		
		try {
			File obj1 = new File("");
			String aux = new String(obj1.getAbsolutePath());
			File obj2 = new File(aux + "/src/Imagens/Mapas/war_tabuleiro_com_nomes.png");
			System.out.println(obj2.getAbsolutePath() + "--->" +obj2.getCanonicalPath());
			
		    img = ImageIO.read(obj2);
		    
		} 
		catch (IOException e) {
			System.out.println("Imagem n√£o encontrada.");
		}
		
		m1.setImg(img);
		m1.repaint();
		
		
	}
	
}
