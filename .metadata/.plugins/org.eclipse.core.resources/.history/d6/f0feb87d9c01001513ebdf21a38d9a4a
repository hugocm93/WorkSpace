package Interface;

import java.awt.HeadlessException;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.*;
import javax.swing.*;


public class Tabuleiro extends JFrame{
	
	private BufferedImage img;
	PainelMapa m1 = new PainelMapa();
	
	public Tabuleiro(String title) throws HeadlessException {
		super(title);
		
		this.add(m1);
		m1.setVisible(true);
		
		try {
			File obj1 = new File("war_tabuleiro_com_nomes.png");
			//System.out.println(obj1.getAbsolutePath() + "--->" +obj1.getCanonicalPath());
			
			File file = new File(".");
			for(String fileNames : file.list()) System.out.println(fileNames);
			
		    img = ImageIO.read(obj1);
		    
		} 
		catch (IOException e) {
			System.out.println("Imagem n√£o encontrada.");
		}
		
		m1.setImg(img);
		m1.repaint();
		
		
	}
	
}
