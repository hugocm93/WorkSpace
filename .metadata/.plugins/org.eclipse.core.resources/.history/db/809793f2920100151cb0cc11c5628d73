package Interface;

import java.awt.HeadlessException;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import javax.imageio.*;
import javax.swing.*;


public class Tabuleiro extends JFrame{
	
	private BufferedImage img;
	
	public Tabuleiro(String title) throws HeadlessException {
		super(title);
		
		try {
			File file = new File("/1212984/Imagens/Mapas/war_tabuleiro_com_nomes.png");   
		    FileInputStream fis = new FileInputStream(file);  
		    BufferedImage img = ImageIO.read(fis); //reading the image file
		    
		
		   // img = ImageIO.read(new File("/1212984/Imagens/Mapas/war_tabuleiro_com_nomes.png"));

		} 
		catch (IOException e) {
			System.out.println("Imagem n√£o encontrada.");
		}
		
	}
	
	public void paintComponent(Graphics g) {
		super.paintComponents(g);
		
		g.drawImage(img, 0, 0, this);
    }
	
	
}
