package Modelos;

import java.util.ArrayList;

public class Rodada {
	
	ArrayList<Turno> turnos;
	int index;;
	Turno atual;
	

	public Rodada(ArrayList<Turno> turnos, Turno atual) {
		super();
		this.turnos = turnos;
		this.atual = atual;
	}

	public ArrayList<Turno> getTurnos() {
		return turnos;
	}

	public void setTurnos(ArrayList<Turno> turnos) {
		this.turnos = turnos;
	}

	public Turno getAtual() {
		return atual;
	}

	public void setAtual(Turno atual) {
		this.atual = atual;
	}
	
	public void proxTurno(){
		index++;
		atual = this.get();
		
	}
	
    public void turnoAnt(){
    	index--;
    	atual = this.get();
		
	} 
    
    public Turno get(){
        if (this.index == -1)
        {
            this.index = turnos.size()-1;
        }

        else if (this.index >= turnos.size())
        {
            this.index = 0;
        }

        return turnos.get(this.index);
    }
	
	

}


