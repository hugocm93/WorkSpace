package Estruturas;

abstract class Constantes {
	
	private int largura = 1024;
	private int altura = 768;
	private int constMagica = 0;
	
//	public int largura = 800;
//	public int altura = 600;
//	public int constMagica = 10;
	
	
	private int largImg = 2133;
	private int altImg = 1600;
	
	private float constConversao = (float)altImg/altura;
	private float constConversao2 = (float)largImg/largura;
	private float constConversaoX = (float)largura/1067;
	private float constConversaoY = (float)altura/800;
	
	private int deslocamento = Math.round(80*constConversaoY);
	private int deslocamento2 = 80;
	public int getLargura() {
		return largura;
	}
	public int getAltura() {
		return altura;
	}
	public int getConstMagica() {
		return constMagica;
	}
	public int getLargImg() {
		return largImg;
	}
	public int getAltImg() {
		return altImg;
	}
	public float getConstConversao() {
		return constConversao;
	}
	public float getConstConversao2() {
		return constConversao2;
	}
	public float getConstConversaoX() {
		return constConversaoX;
	}
	public float getConstConversaoY() {
		return constConversaoY;
	}
	public int getDeslocamento() {
		return deslocamento;
	}
	public int getDeslocamento2() {
		return deslocamento2;
	}
	
	
	

}
