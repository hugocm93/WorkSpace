package Interface;

import java.awt.HeadlessException;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.*;
import javax.swing.*;

public class Tabuleiro extends JFrame{
	
	static final long serialVersionUID = 1L;
	private BufferedImage img;
	PainelMapa m1 = new PainelMapa();
	
	public Tabuleiro(String title) throws HeadlessException {
		super(title);
		
		this.add(m1);
		m1.setVisible(true);
		this.addMouseListener(m1);
		
		try {
//			File obj1 = new File("");
//			String path1 = new String(obj1.getAbsolutePath());
			String path1 = System.getProperty("user.dir");
			
			File obj2 = new File(path1 + "/src/Imagens/Mapas/war_tabuleiro_com_nomes.png");
						
		    img = ImageIO.read(obj2);
		    
		    System.out.println(System.getProperty("user.dir"));
		} 
		catch (IOException e) {
			System.out.println("Imagem n√£o encontrada.");
		}
		
		m1.setImg(img);
		m1.repaint();
		
	}
	
}
